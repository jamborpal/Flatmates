<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.jamborpal.app.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
    </fragment>
  <fragment
        android:id="@+id/nav_takemehome"
        android:name="com.jamborpal.app.ui.takemehome.MapsFragment"
        android:label="@string/menu_takemehome"
        tools:layout="@layout/fragment_maps"/>
    <fragment
        android:id="@+id/nav_expenses"
        android:name="com.jamborpal.app.ui.expenses.ExpensesFragment"
        android:label="@string/expenses"
        tools:layout="@layout/fragment_expenses"/>
    <fragment
        android:id="@+id/nav_tasks"
        android:name="com.jamborpal.app.ui.tasks.TasksFragment"
        android:label="@string/menu_tasks"/>
    <fragment
        android:id="@+id/nav_messageboard"
        android:name="com.jamborpal.app.ui.messageboard.MessageBoardFragment"
        android:label="@string/menu_messageboard"/>
    <fragment
        android:id="@+id/nav_events"
        android:name="com.jamborpal.app.ui.events.EventsFragment"
        android:label="@string/menu_events"/>
    <fragment
        android:id="@+id/nav_contact"
        android:name="com.jamborpal.app.ui.contact.ContactFragment"
        android:label="@string/menu_contact"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.jamborpal.app.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_home" />
    <activity
        android:id="@+id/loginHandler"
        android:name="com.jamborpal.app.login.LoginHandler"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <activity
        android:id="@+id/locationHandler"
        android:name="com.jamborpal.app.register.LocationHandler"
        android:label="activity_location"
        tools:layout="@layout/activity_location" />
    <activity
        android:id="@+id/registerHandler"
        android:name="com.jamborpal.app.register.RegisterHandler"
        android:label="activity_register"
        tools:layout="@layout/activity_register" />
  <activity
      android:id="@+id/landlordHandler"
      android:name="com.jamborpal.app.register.LandlordHandler"
      android:label="activity_landlord"
      tools:layout="@layout/activity_landlord" />

</navigation>